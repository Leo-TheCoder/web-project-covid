<div class="container w-screen max-w-full">
	<div class="w-[920px] mx-auto flex flex-col pt-10">

		{{#compare type "M"}}
		<a href='/packs/add'
			class="mt-6 w-2xl self-end bg-indigo-600 border border-transparent rounded-md py-3 px-8 flex items-center justify-center text-base font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Thêm
			gói nhu yếu phẩm</a>
		{{/compare}}

		<div class="grid grid-cols-3 gap-10 py-10">
			{{#each packs}}
			<div class="group relative">
				<div class="block bg-white shadow-lg hover:shadow-xl rounded-lg overflow-hidden">
					<img class="h-56 rounded w-full object-cover object-center mb-4" src="{{this.linkpic}}"
						alt="Image Size 720x400" />
					<div class="p-4">
						<div>
							<a href="/packs/{{this.productpackid}}">
								<span aria-hidden="true" class="absolute inset-0"></span>
								<h5 class="text-lg text-gray-900 font-medium mb-4 whitespace-normal">
									{{this.productpackname}}
								</h5>

							</a>
							<p class="tracking-widest text-indigo-500 text-xs font-medium truncate ...">
								Còn được mua:
								{{this.productpacklimit}}
							</p>
						</div>
					</div>
				</div>
			</div>
			{{/each}}
		</div>
	</div>
</div>