<div class="container">
  <div class="profile-container">

    <form class="profile-card" action="/products" method="POST" enctype="multipart/form-data">
      <img src="/img/food.jpg" alt="Food image" class="avatar-image" width="200px" />
      <input id="productname" name="productname" class="page-title" type="text" placeholder="Tên sản phẩm" value=""></input>

