<div class="container w-screen max-w-full">
  <div class="container mx-auto py-10 h-64 md:w-4/5 w-11/12 px-6">
    <div class="w-full h-full rounded">

      <div class="px-4 py-3 bg-gray-50 text-right sm:px-6">
        <a href="/products/add"
          class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Thêm
          nhu yếu phẩm</a>
      </div>

      <div class="flex flex-wrap gap-10 justify-center">
        {{#each products}}
        <div class="max-w-xs rounded overflow-hidden shadow-lg">
          <img class="w-full" src="{{linkpic}}" alt="Picture of food">
          <div class="px-6 py-4">
            <div class="font-bold text-xl mb-2">{{productname}}</div>
            <p class="text-gray-700 text-base">
              {{productprice}} VNĐ
            </p>
            {{#compare type M}}
            <a href="products/{{productid}}" class="text-indigo-600 hover:text-indigo-900">Edit</a>
            {{else}}
            <a href="products/{{productid}}" class="text-indigo-600 hover:text-indigo-900">Chi tiết</a>
            {{/compare}}
          </div>
        </div>
        {{/each}}
      </div>

    </div>
  </div>
</div>