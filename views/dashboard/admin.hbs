<div class="container w-screen max-w-full">

	<div class="flex flex-no-wrap">
		<!-- Sidebar starts -->
		<!-- Remove class [ hidden ] and replace [ sm:flex ] with [ flex ] -->
		<div style="min-height: 716px"
			class="h-full w-64 absolute sm:relative bg-slate-50 shadow md:h-full flex-col justify-between flex">
			<div class="px-8">
				<ul class="mt-12">
					{{#if manager}}
					<li class="flex w-full justify-between text-gray-500 cursor-pointer items-center mb-6">
						<a href="/admin/managers" class="flex items-center focus:outline-none focus:ring-2 focus:ring-white">
							<span class="text-sm ml-2">Quản lý tài khoản</span>
						</a>
					</li>
					<li class="flex w-full justify-between text-gray-500 hover:text-gray-300 cursor-pointer items-center mb-6">
						<a href="/admin/areas" class="flex items-center focus:outline-none focus:ring-2 focus:ring-white">
							<span class="text-sm ml-2">Quản lý bệnh viện</span>
						</a>
					</li>
					{{else}}
					<li class="flex w-full justify-between text-gray-500 hover:text-gray-300 cursor-pointer items-center mb-6">
						<a href="/admin/managers" class="flex items-center focus:outline-none focus:ring-2 focus:ring-white">
							<span class="text-sm ml-2">Quản lý tài khoản</span>
						</a>
					</li>
					<li class="flex w-full justify-between text-gray-500 cursor-pointer items-center mb-6">
						<a href="/admin/areas" class="flex items-center focus:outline-none focus:ring-2 focus:ring-white">
							<span class="text-sm ml-2">Quản lý bệnh viện</span>
						</a>
					</li>
					{{/if}}
				</ul>
			</div>
		</div>
		<!-- Sidebar ends -->
		<!-- Remove class [ h-64 ] when adding a card block -->
		<div class="container mx-auto py-10 h-64 md:w-4/5 w-11/12 px-6">
			<div class="w-full h-full rounded">

				<!-- ___________________________TABLE____________________________ -->

				<!-- ___________________________MANAGER____________________________ -->
				{{#if manager}}
				<a href="/admin/managers/add""
          class=" inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium
					rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2
					focus:ring-indigo-500 mb-5">Thêm quản lý</a>

				<div class="flex flex-col">
					<div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
						<div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
							<div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
								<table class="min-w-full divide-y divide-gray-200">
									<thead class="bg-gray-50">
										<tr>
											<th scope="col"
												class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
												Họ tên
											</th>
											<th scope="col"
												class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
												Số điện thoại
											</th>
											<th scope="col"
												class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
												Địa chỉ
											</th>
											<th scope="col"
												class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
												Phân quyền
											</th>
											<th scope="col" class="relative px-6 py-3">
												<span class="sr-only">Kh</span>
											</th>
										</tr>
									</thead>
									<tbody class="bg-white divide-y divide-gray-200">
										{{#each array}}
										<tr>
											<td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
												{{managername}}
											</td>
											<td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
												{{managerphone}}
											</td>
											<td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
												{{manageraddress}}
											</td>
											<td class="px-6 py-4 whitespace-nowrap">
												<span
													class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
													Quản lý
												</span>
											</td>
											{{#if status}}
											<td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
												<a href="#" class="text-red-600 hover:text-red-900" onClick=lockManager({{managerid}})>Khóa</a>
											</td>
											{{else}}
											<td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
												<button class="text-indigo-600 hover:text-indigo-900" onClick=unlockManager({{managerid}})>Mở khóa</button>
											</td>
											{{/if}}
										</tr>
										{{/each}}
									</tbody>
								</table>
							</div>
						</div>
					</div>
				</div>
				{{else}}
				<!-- ___________________________AREA____________________________ -->
				<a href="#""
          class=" inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium
					rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2
					focus:ring-indigo-500 mb-5">Thêm khu cách ly</a>

				<div class="flex flex-col">
					<div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
						<div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
							<div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
								<table class="min-w-full divide-y divide-gray-200">
									<thead class="bg-gray-50">
										<tr>
											<th scope="col"
												class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
												Tên
											</th>
											<th scope="col"
												class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
												Sức chứa
											</th>
											<th scope="col"
												class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
												Sĩ số
											</th>
											<th scope="col"
												class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
												Địa chỉ
											</th>
											<th scope="col" class="relative px-6 py-3">
												<span class="sr-only">Kh</span>
											</th>
										</tr>
									</thead>
									<tbody class="bg-white divide-y divide-gray-200">
										{{#each array}}
										<tr>
											<td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
												{{areaname}}
											</td>
											<td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
												{{capacity}}
											</td>
											<td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
												{{occupated}}
											</td>
											<td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
												{{areaaddress}}
											</td>
											<td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
												<a href="#" class="text-indigo-600 hover:text-indigo-900">Edit</a>
											</td>
										</tr>
										{{/each}}
									</tbody>
								</table>
							</div>
						</div>
					</div>
				</div>
				{{/if}}
				<!-- ___________________________TABLE ENDS____________________________ -->
			</div>
		</div>
	</div>

</div>

{{>(editScript)}}