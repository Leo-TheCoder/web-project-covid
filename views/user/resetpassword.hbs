<div class="login-container">

  <div class="login-card">
    <div class="page-title">Cập nhật mật khẩu</div>

    <form name="login" style="position: relative" action="/login/resetpassword" method="POST">
      <label class="form-label" for="phone_number">Số điện thoại<br/>
        <input name="phone_number" id="phone_number" type="tel" class="form-input-text"/>
      </label> 
       <label class="form-label" for="password">Mật khẩu<br/>
        <input name="new_pass" id="password" type="password" class="form-input-text"/>
        <span class="show-password" onclick="TogglePassword(this)">Hiện</span>
      </label>
      <label class="form-label" for="password">Nhập lại mật khẩu<br/>
        <input name="confirm_pass" id="password" type="password" class="form-input-text"/>
        <span class="show-password" onclick="TogglePassword(this)">Hiện</span>
      </label>
      <button class="bg-violet-500 hover:bg-violet-400 text-white py-2 px-4 rounded" type="submit" style="width: 100%; font-size: 15px">Cập nhật</button>
    </form>

      {{#if error}}
    <div class="error">
        {{ error}}
    </div>
      {{/if}}
  </div>

</div>
