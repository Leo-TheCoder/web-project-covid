<div class="w-[920px] mx-auto flex flex-col pt-10">
	{{#with patient}}
	<div class="mt-10 sm:mt-0">
		<div class="md:grid md:grid-cols-3 md:gap-6">
			<div class="md:col-span-1">
				<div class="px-4 sm:px-0">
					<h3 class="text-lg font-medium leading-6 text-gray-900">Chỉnh sửa
						thông tin</h3>
					<p class="mt-1 text-sm text-gray-600">
						Vui lòng chỉ cập nhật thông tin cho bệnh nhân khi có sai lệch.
					</p>
					<button
						class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500"
						onclick="deletePatient({{patientid}})">
						Xóa bệnh nhân
					</button>

					<a href='{{patientid}}/contact'
						class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
						Danh sách tiếp xúc
					</a>
				</div>
			</div>
			<div class="mt-5 md:mt-0 md:col-span-2">
				{{!-- <form action="#">
					

				</form> --}}
				<div class="shadow overflow-hidden sm:rounded-md">
						<div class="px-4 py-5 bg-white sm:p-6">
							<div class="grid grid-cols-6 gap-6">
								<div class="col-span-6 sm:col-span-4">
									<label for="name" class="block text-sm font-medium text-gray-700">Họ tên: </label>
									<input type="text" name="name" id="name"
										class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md"
										value="{{patientname}}" />
								</div>

								<div class="col-span-6 sm:col-span-4">
									<label for="idnumber" class="block text-sm font-medium text-gray-700">CCCD: </label>
									<input type="text" name="idnumber" id="idnumber"
										class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md"
										value="{{patientidnumber}}" />
								</div>

								<div class="col-span-6 sm:col-span-4">
									<label for="startdate" class="block text-sm font-medium text-gray-700">Ngày sinh:
									</label>
									<input type="text" name="startdate" id="startdate"
										class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md"
										value="{{patientdob}}" />
								</div>

								<div class="col-span-6 sm:col-span-4">
									<label for="phone" class="block text-sm font-medium text-gray-700">Số điện
										thoại:</label>
									<input type="text" name="phone" id="phone"
										class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md"
										value="{{patientphone}}" />
								</div>

								<div class="col-span-6">
									<label for="street-address" class="block text-sm font-medium text-gray-700">Địa
										chỉ:</label>
									<input type="text" name="street-address" id="street-address"
										class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md"
										value="{{patientaddress}}" />
								</div>

								<div class="col-span-6 sm:col-span-4">
									<label for="status" class="block text-sm font-medium text-gray-700">Tình
										trạng</label>
									<select id="status" name="status"
										class="mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
										<option value="0" {{#compare status 0}}selected {{/compare}}>F0</option>
										<option value="1" {{#compare status 1}}selected {{/compare}}>F1</option>
										<option value="2" {{#compare status 2}}selected {{/compare}}>F2</option>
										<option value="3" {{#compare status 3}}selected {{/compare}}>F3</option>
									</select>
								</div>

								<div class="col-span-6 sm:col-span-4">
									<label for="hospital-area" class="block text-sm font-medium text-gray-700">Nơi cách
										ly hiện tại:</label>
									<select id="hospital-area" name="quarantinearea"
										class="mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
										{{#each quarantinearea}}
										<option value="{{areaid}}" {{#if area}} selected {{/if}}>{{areaname}}</option>
										{{/each}}
									</select>
								</div>

								<div class="col-span-6 sm:col-span-3">
									<label for="startdate" class="block text-sm font-medium text-gray-700">Ngày bắt đầu
										cách ly: </label>
									<input type="text" name="startdate" id="startdate"
										class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md"
										readonly value="{{startdate}}" />
								</div>

								<div class="col-span-6 sm:col-span-3">
									<label for="startdate" class="block text-sm font-medium text-gray-700">Ngày kết thúc
										cách ly</label>
									<input type="text" name="startdate" id="startdate"
										class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md"
										value="{{enddate}}" />
								</div>
							</div>
						</div>
						<div class="px-4 py-3 bg-gray-50 text-right sm:px-6">
							<button
								class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
								onclick="updatePatient({{patientid}}, {{status}}, {{quarantineareaid}})">
								Lưu
							</button>
						</div>
					</div>
			</div>
		</div>
	</div>
	{{/with}}
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

{{>(editScript)}}